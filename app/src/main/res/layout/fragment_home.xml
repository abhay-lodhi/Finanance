<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/homedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Date"
        android:textColor="@color/golden"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/homechart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <ImageView-->
<!--        android:id="@+id/homechart"-->
<!--        android:layout_width="262dp"-->
<!--        android:layout_height="267dp"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:src="@color/purple_200"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->
    <ir.mahozad.android.PieChart
        android:id="@+id/homechart"
        android:layout_width="262dp"
        android:layout_height="267dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homedate"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:id="@+id/hll"
       app:layout_constraintTop_toBottomOf="@id/homechart">

       <TextView
           android:id="@+id/cat"
           android:layout_width="176dp"
           android:layout_height="wrap_content"
           android:layout_margin="15dp"
           android:layout_weight="@integer/material_motion_duration_long_1"
           android:text="Category"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/amt"
           android:layout_width="20dp"
           android:layout_height="wrap_content"
           android:layout_margin="15dp"
           android:layout_weight="@integer/material_motion_duration_long_1"
           android:text="Amount"
           android:textColor="@color/golden"
           android:textSize="18sp"
           android:textStyle="bold" />
   </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="325dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="405dp"
        app:layout_constraintTop_toBottomOf="@id/hll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>